[url "git@github.com:"]
	insteadOf = https://github.com/

[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[github]
	user = voigt
[gitlab]
	user = c.voigt

[merge]
	tool = vcode
[mergetool "vscode"]
        cmd = code --wait $MERGED
	keepBackup = true
[push]
	default = current
[pull]
	rebase = false
[merge]
	ff = only
[branch]
	autosetuprebase = always
	autosetupmerge = always

[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f

# Include OS specific configuration
[includeIf "gitdir:/Users/"]
  path = ~/.gitconfig-macos
[includeIf "gitdir:/home/"]
  path = ~/.gitconfig-linux

# Include Employer specific configuration
[url "git@github.com:"]
	insteadOf = https://github.com/
[url "git@ssh.dev.azure.com:v3"]
	insteadOf = https://dev.azure.com
[includeIf "gitdir:**/gitub.com/stackitcloud/**/.git"]
  path = ~/.gitconfig-stackit
[includeIf "gitdir:**/dev.azure.com/schwarzit/**/.git"]
  path = ~/.gitconfig-stackit
[includeIf "gitdir:**/onstackit.cloud/**/.git"]
  path = ~/.gitconfig-stackit
